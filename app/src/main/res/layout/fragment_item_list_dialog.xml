<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/tv_select_upi_app_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Select UPI App"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="You will be redirected to the app for completing the payment"
        android:maxLines="1"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_popular_upi_apps"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_all_upi_app_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="15dp"
        android:text="Use other UPI apps"
        android:textSize="16dp" />

<!--    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_all_upi_apps"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:visibility="gone"/>-->

    <Button
        android:id="@+id/btn_upi_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@color/design_fab_shadow_start_color"
        android:text="Proceed"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false" />

</LinearLayout>
